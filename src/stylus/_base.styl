html, body
    width 100%
    height 100%

@keyframes background-stripes {
    from {
        background-position 40px 40px
    }
    to {
        background-position 0 0
    }
}

body
    animation background-stripes 4s linear infinite
    background-color lighten($_theme, 60%)
    background-image linear-gradient(-45deg, rgba(#fff, .15) 25%, transparent 25%, transparent 50%, rgba(#fff, .15) 50%, rgba(#fff, .15) 75%, transparent 75%, transparent)
    background-size 40px 40px
    cursor default
    user-select none

input, textarea, button
    background none
    border none
    margin 0
    outline none
    padding 0

a
    -webkit-tap-highlight-color rgba(#000, 0)

ul, ol
    list-style-type none

button
    cursor pointer

h1, h2, h3, h4, h5, h6
    font-size 100%
    font-weight normal