.menu-wrapper
    bottom 80px
    left 0
    position fixed
    right 0
    top 0
    .menu
        padding 20px
        margin 20px
        box-shadow 0 0 5px -2px rgba(#000, .3), 0 0 15px rgba(#000, .1)
        display flex
        flex-direction column
        &-row
            display flex
        &-item
            display flex
            flex 1
            flex-direction column