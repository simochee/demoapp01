.splash
    background $_theme
    height 100%
    position relative
    width 100%
    z-index 1001
    &-logo
        align-items center
        color $_white
        display flex
        font-size 30vw
        height calc(100% - 120px)
        justify-content center
        width 100%
    &-buttons
        display flex
        height 52px
        margin 34px 10px
        width calc(100% - 20px)
        .button
            flex 1
            margin 0 6px